<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/drawerSelectionImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sliding_menu_active_item_bg"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/drawerMenuItemLogoImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/drawerSelectionImageView"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/drawerMenuItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/drawerMenuItemLogoImageView"
        android:gravity="left|center_vertical"
        android:padding="12dp"
        android:textColor="@color/main_brown"
        android:textSize="18sp" />

</RelativeLayout>