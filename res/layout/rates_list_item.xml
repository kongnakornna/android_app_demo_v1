<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/ratesListItemImageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/ratesListTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ratesListItemImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/ratesListItemImageView"
        android:textColor="@color/main_brown"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ratesListDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratesListTitleTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/ratesListItemImageView"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/rates_desc" />

    <TextView
        android:id="@+id/ratesListRatesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ratesListItemImageView"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/green_rounded_background"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>